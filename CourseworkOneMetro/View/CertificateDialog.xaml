<Controls:MetroWindow x:Class="CourseworkOneMetro.View.CertificateDialog"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:viewModel="clr-namespace:CourseworkOneMetro.ViewModels"
                      Title="CertificateDialog"
                      Height="350"
                      Width="525">

    <Controls:MetroWindow.Resources>
        <viewModel:BoolToVisibilityConv
         x:Key="BoolToHiddenConverter"
         TrueValue="Visible" FalseValue="Hidden" />
    </Controls:MetroWindow.Resources>
    <Controls:MetroWindow.DataContext>
        <viewModel:RegistrationWindowViewModel/>
    </Controls:MetroWindow.DataContext>

    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="45,42,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Controls:MetroWindow>
